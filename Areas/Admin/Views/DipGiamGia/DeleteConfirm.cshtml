@model MyLaptopWebsite.Models.DipGiamGia

@{
    ViewData["Title"] = "DeleteConfirm";
}

@if(Model == null)
{
    <h3 class="text-danger fw-bold">Không tìm thấy thông tin của dịp giảm giá</h3>
}
else
{
    <h3>Bạn có chắc sẽ xoá dịp giảm giá này không ?</h3>
<div>
    <h4>DipGiamGia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaDipGiamGia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaDipGiamGia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenDipGiamGia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDipGiamGia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayBatDau)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayBatDau)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayHetHan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayHetHan)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" value="@Model.MaDipGiamGia" name="id" />
        <input type="submit" value="Xoá dịp giảm giá" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Huỷ thao tác</a>
    </form>
</div>
}


