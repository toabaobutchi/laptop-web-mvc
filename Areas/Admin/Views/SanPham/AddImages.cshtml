@{
    ViewBag.Title = "Add images";
}

<h1 class="text-success">Thêm hình ảnh cho sản phẩm</h1>

<form asp-action="AddImages" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@ViewBag.Id" />
    <div class="form-group mt-2">
        <label for="images" class="control-label"></label>
        <input name="images" id="images" type="file" class="form-control" accept="image/*" onchange="displayImages(this, '#renderImg')" multiple />
        <div id="renderImg" class="mt-3">
            <p>Hình ảnh bạn vừa chọn</p>
        </div>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Thêm hình ảnh" class="btn btn-primary" />
    </div>
</form>