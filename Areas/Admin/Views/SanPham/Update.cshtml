@model MyLaptopWebsite.Models.SanPham

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<style>
    .control-label {
        font-weight: 600;
    }
</style>

<h2 class="text-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Cập nhật thông tin sản phẩm</h2>
<hr />
        <form asp-action="Update" method="post" class="w-50">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="MaSp" class="control-label"></label>
                <input asp-for="MaSp" class="form-control" readonly />
                <span asp-validation-for="MaSp" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="TenSp" class="control-label"></label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group mb-2 col-6">
                    <label asp-for="DonGia" class="control-label"></label>
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 col-6">
                    <label asp-for="TonKho" class="control-label"></label>
                    <input asp-for="TonKho" class="form-control" />
                    <span asp-validation-for="TonKho" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="BaiViet" class="control-label"></label>
                <textarea asp-for="BaiViet" class="form-control"></textarea>
                <span asp-validation-for="BaiViet" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="MaNsx" class="control-label"></label>
                <select asp-for="MaNsx" asp-items="ViewBag.Nhasanxuat" class="form-select"></select>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Lưu thay đổi" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary"><i class="fa fa-reply" aria-hidden="true"></i> Trở lại</a>
            </div>
        </form>
<p class="mt-3"><i class="fa fa-angle-double-right" aria-hidden="true"></i> Cập nhật hình ảnh, giảm giá tại <a asp-action="Index" class="text-priamry fw-bold">Quản lý sản phẩm</a></p>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
