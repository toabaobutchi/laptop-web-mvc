@using MyLaptopWebsite.Utils
@model UserForm
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Document</title>
</head>
<body class="bg-light d-flex justify-content-center align-items-center flex-column">
    <h1 class="text-primary">Chào mừng đến với trang quản trị</h1>
    <h3 class="text-info">Trước hết, hãy cho tôi biết bạn là ai?</h3>
    <form asp-action="LoginAdmin" asp-controller="HomePage" asp-area="Admin" class="w-50 bg-white rounded-2 p-3" method="post">
        <p class="text-danger">@ViewBag.ErrorMessage</p>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <div class="form-group text-center mt-3">
            <input type="submit" value="Đăng nhập" class="btn btn-success" />
        </div>
    </form>
</body>
</html>