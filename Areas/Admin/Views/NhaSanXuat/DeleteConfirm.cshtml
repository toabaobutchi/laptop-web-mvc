@model MyLaptopWebsite.Models.NhaSanXuat

@{
    ViewData["Title"] = "Xoá nhà sản xuất";
}

@if(Model == null)
{
    <h3 class="text-danger text-center"> Không tìm thấy thông tin nhà sản xuất </h3>
}
else
{
<h1>Xoá nhà sản xuất</h1>

<h3>Bạn có chắc sẽ xoá nhà sản xuất này không ?</h3>
<div>
    <h4>Thông tin nhà sản xuất</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaNsx)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNsx)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TenNsx)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenNsx)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.Logo" />
        </dd>
    </dl>

    <h2 class="text-danger">Lưu ý: Nhà sản xuất này có @Model.SanPhams.Count() sản phẩm! </h2>
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.MaNsx" />
        <input type="submit" value="Xoá nhà sản xuất" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Huỷ bỏ</a>
    </form>
</div>
}