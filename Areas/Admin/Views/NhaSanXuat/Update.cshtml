@model MyLaptopWebsite.Models.NhaSanXuat

@{
    ViewData["Title"] = "Cập nhật nhà sản xuất";
}
<style>
    #renderImg img {
        max-width: 400px;
    }
</style>
@if(Model == null)
{
    <h3 class="text-danger text-center"> Không tìm thấy thông tin nhà sản xuất </h3>
}
else
{
    <h2 class="mb-4"><i class="fa fa-file-text-o" aria-hidden="true"></i> Thông tin nhà sản xuất</h2>
<hr />
    <div class="w-50">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p class="text-warning fw-bold">Bạn không thể cập nhật lại mã nhà sản xuất!</p>
                <label asp-for="MaNsx" class="control-label"></label>
                    <input asp-for="MaNsx" class="form-control" readonly data-bs-toggle="tooltip" data-bs-placement="right" title="Không thể cập nhật mã sản phẩm" />
            </div>
            <div class="form-group">
                <label asp-for="TenNsx" class="control-label"></label>
                <input asp-for="TenNsx" class="form-control" />
                <span asp-validation-for="TenNsx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="logo" class="control-label"></label>
                <input name="newLogo" id="logo" type="file" class="form-control" accept="image/*" onchange="displayImages(this, '#renderImg')" />
                <div class="mt-3">
                    <p class="fw-bold border-bottom">Hình ảnh hiện tại</p>
                    <img src="~/images/@Model.Logo" class="img-thumbnail" />
                    <hr />
                        <p class="fw-bold border-bottom">
                            Hình ảnh sẽ được cập nhật
                        <span data-bs-toggle="tooltip" data-bs-placement="right" title="Không chọn để giữ lại hình ảnh hiện tại">
                            <i class="fa fa-question-circle" aria-hidden="true" style="cursor: pointer;"></i>
                        </span>
                    </p>
                    <div id="renderImg" class="mb-3">
                        <p class="fst-italic">Chưa có hình ảnh được chọn</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary">Huỷ thao tác</a>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}


