@model MyLaptopWebsite.Models.NguoiDung

@{
    ViewData["Title"] = "Thêm nhân viên";
}

<h1 class="text-warning">Thêm nhân viên</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="NguoiDung" asp-area="Admin" method="post">
            <div class="form-group">
                <label asp-for="TenNguoiDung" class="control-label"></label>
                <input asp-for="TenNguoiDung" class="form-control" />
                <span class="errorMessage text-danger fs-6"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span class="errorMessage text-danger fs-6"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label"></label>
                <input asp-for="MatKhau" class="form-control" />
                <span class="errorMessage text-danger fs-6"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo tài khoản" class="btn btn-success" />
                <a asp-action="Index" asp-controller="NguoiDung" asp-area="Admin" class="btn btn-primary"><i class="fa fa-reply" aria-hidden="true"></i> Trở lại</a>
            </div>
        </form>
    </div>
</div>
