@using Microsoft.AspNetCore.Http
@using MyLaptopWebsite.Utils
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <title>@ViewBag.Title</title>

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @@media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
  <!-- Custom styles for this template -->
  <link href="~/css/sidebars.css" rel="stylesheet">
</head>

<body>
  <main class="container-fluid">
    <div class="flex-shrink-0 p-3 bg-white" style="width: 15%;">
      <a href="/" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
        <span class="fs-5 fw-semibold">Quản trị viên</span>
      </a>
      <ul class="list-unstyled ps-0">
        <li class="mb-2">
            <a asp-action="Index" asp-area="Admin" asp-controller="SanPham" class="btn btn-default fs-6 text-primary"> <i class="fa fa-laptop" aria-hidden="true"></i> Quản lý sản phẩm</a>
        </li>
        <li class="mb-2">
            <a asp-action="Index" asp-area="Admin" asp-controller="NhaSanXuat" class="btn btn-default fs-6 text-info"><i class="fa fa-building-o" aria-hidden="true"></i> Quản lý nhà sản xuất</a>
        </li>
        <li class="mb-2">
            <a asp-action="Index" asp-area="Admin" asp-controller="DipGiamGia" class="btn btn-default fs-6 text-secondary">
                <i class="fa fa-percent" aria-hidden="true"></i> Quản lý dịp giảm giá
            </a>
        </li>
        <li class="mb-2">
            <a asp-action="Index" asp-area="Admin" asp-controller="Order" class="btn btn-default fs-6 text-warning"><i class="fa fa-file-text-o" aria-hidden="true"></i> Quản lý đơn hàng</a>
        </li>
        <li class="mb-2">
            <a asp-action="Index" asp-area="Admin" asp-controller="NguoiDung" class="btn btn-default fs-6 text-danger">
                <i class="fa fa-user-o" aria-hidden="true"></i> Quản lý người dùng
            </a>
        </li>
        <li class="mb-2">
            <a asp-action="Index" asp-area="Admin" asp-controller="BinhLuan" class="btn btn-default fs-6 text-success">
                <i class="fa fa-commenting-o" aria-hidden="true"></i> Quản lý bình luận
            </a>
        </li>
        <li class="border-top my-3"></li>
        <li class="mb-1">
            @{
                var admin = Context.Session.Get<NguoiDung>("admin");
            }
                    <i class="fa fa-user-circle-o" aria-hidden="true"></i> @admin.TenNguoiDung
        </li>
            <li class="mb-1">
                <a asp-action="Logout" class="text-black" asp-controller="HomePage" asp-area="Admin">
                        <i class="fa fa-sign-out" aria-hidden="true"></i> Đăng xuất
                </a>
                
            </li>
      </ul>
    </div>
    <div class="b-example-divider"></div>
    <section class="main-content w-100 p-3">
      @RenderBody()
    </section>
  </main>
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/renderImage.js"></script>
    <script src="~/js/sidebars.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>